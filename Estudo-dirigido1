        }while(num_apostas <= 0);


            do{
            cout << "Quantas dezenas você deseja jogar? (mínimo 6 - máximo 15" <<endl;
            cin >> quantia_dezenas;

            }while(quantia_dezenas < 6 || quantia_dezenas >15);

            if(quantia_dezenas == 6){
                valor_aposta = 3.50  ;
            }

            else if(quantia_dezenas == 7){
                valor_aposta = 24,50  ;
            }

            else if(quantia_dezenas == 8){
                valor_aposta = 98,00  ;
            }

            else if(quantia_dezenas == 9){
                valor_aposta =  294,00 ;
            }

            else if(quantia_dezenas == 10){
                valor_aposta = 735,00  ;
            }

            else if(quantia_dezenas == 11){
                valor_aposta = 1.617,00  ;
            }

            else if(quantia_dezenas == 12){
                valor_aposta = 3.234,00  ;
            }

            else if(quantia_dezenas == 13){
                valor_aposta = 6.006,00 ;
            }

            else if(quantia_dezenas == 14){
                valor_aposta = 10.510,50  ;
            }

            if(quantia_dezenas == 15){
                valor_aposta = 17.517,50  ;
            }


        for(int i = 1 ; i < num_apostas + 1 ; i++){
                cout << "Sua " <<i <<"º aposta teve os seguintes números: " <<endl;

            for(int j = 0 ; j < quantia_dezenas ; j++){
                numeros.push_back(rand() % 60);
            }
                sort(numeros.begin(), numeros.end());

                   for(int a = 0 ; a < quantia_dezenas ; a++){
                          if(numeros[a] != numeros[a - 1]){
                                cout << numeros[a] <<" ";
                               }   else{
                            verif:     numeros[a] = (rand() % 60);
                                    sort(numeros.begin(), numeros.end());
                                          if(numeros[a] != numeros[a - 1]){
                                                 cout <<numeros[a] << " ";
                                          } else{
                                            goto verif;
                                          }




                    }
                    }


                    cout <<endl << "Foram gastos R$" << valor_aposta <<" com essa aposta" <<endl;
                    numeros.clear();


                cout <<endl;
        }


